    "environment": [
      {"name": "NODE_ENV", "value": "production"},
      {"name": "PORT", "value": "3005"},
      {"name": "DATABASE_URL", "value": "postgresql://bsimadmin:8O9MwSmoA1IUQfOZyw7H4L2lDoeA2M8w@bsim-db.cb80gi4u4k7g.ca-central-1.rds.amazonaws.com:5432/wsim"},
