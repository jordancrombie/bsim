<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Enroll Cards in Wallet - BSIM</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
    .container {
      background: white;
      border-radius: 16px;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      width: 100%;
      max-width: 520px;
      padding: 40px;
    }
    .header {
      text-align: center;
      margin-bottom: 32px;
    }
    .client-logo {
      width: 64px;
      height: 64px;
      border-radius: 12px;
      margin-bottom: 16px;
      object-fit: cover;
    }
    .client-placeholder {
      width: 64px;
      height: 64px;
      border-radius: 12px;
      background: #ede9fe;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 16px;
      font-size: 24px;
      color: #7c3aed;
    }
    h1 {
      font-size: 24px;
      font-weight: 600;
      color: #111827;
      margin-bottom: 8px;
    }
    .subtitle {
      color: #6b7280;
      font-size: 14px;
    }
    .client-name {
      font-weight: 600;
      color: #7c3aed;
    }
    .user-badge {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: #f3f4f6;
      padding: 8px 16px;
      border-radius: 20px;
      font-size: 14px;
      color: #374151;
      margin-top: 12px;
    }
    .wallet-info {
      background: #faf5ff;
      border: 2px solid #c4b5fd;
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 24px;
    }
    .wallet-info-title {
      font-size: 14px;
      font-weight: 600;
      color: #7c3aed;
      margin-bottom: 8px;
    }
    .wallet-info-text {
      font-size: 13px;
      color: #6b7280;
      line-height: 1.5;
    }
    .permissions-list {
      margin-top: 12px;
      padding-left: 20px;
    }
    .permissions-list li {
      font-size: 13px;
      color: #6b7280;
      margin-bottom: 4px;
    }
    .section {
      margin-bottom: 24px;
    }
    .section-title {
      font-size: 14px;
      font-weight: 600;
      color: #374151;
      margin-bottom: 12px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .select-all-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 12px 16px;
      background: #f9fafb;
      border: 1px solid #e5e7eb;
      border-bottom: none;
      border-radius: 12px 12px 0 0;
    }
    .select-all-label {
      font-size: 14px;
      color: #374151;
      cursor: pointer;
    }
    .select-all-label input {
      margin-right: 8px;
      accent-color: #7c3aed;
    }
    .cards-list {
      border: 1px solid #e5e7eb;
      border-radius: 0 0 12px 12px;
      overflow: hidden;
    }
    .cards-list.no-header {
      border-radius: 12px;
    }
    .card-item {
      display: flex;
      align-items: center;
      padding: 16px;
      border-bottom: 1px solid #e5e7eb;
      cursor: pointer;
      transition: background 0.2s;
    }
    .card-item:last-child {
      border-bottom: none;
    }
    .card-item:hover {
      background: #f9fafb;
    }
    .card-item.selected {
      background: #faf5ff;
      border-color: #c4b5fd;
    }
    .card-item input[type="checkbox"] {
      width: 20px;
      height: 20px;
      margin-right: 16px;
      accent-color: #7c3aed;
    }
    .card-visual {
      width: 60px;
      height: 38px;
      border-radius: 6px;
      margin-right: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 10px;
      color: white;
    }
    .card-visa { background: linear-gradient(135deg, #1a1f71, #2e4a9a); }
    .card-mc { background: linear-gradient(135deg, #eb001b, #f79e1b); }
    .card-amex { background: linear-gradient(135deg, #006fcf, #00a1e4); }
    .card-default { background: linear-gradient(135deg, #4b5563, #6b7280); }
    .card-info {
      flex: 1;
    }
    .card-number {
      font-family: monospace;
      font-size: 14px;
      color: #374151;
      font-weight: 500;
    }
    .card-details {
      display: flex;
      gap: 16px;
      font-size: 12px;
      color: #6b7280;
      margin-top: 4px;
    }
    .no-cards {
      text-align: center;
      padding: 40px 20px;
      color: #6b7280;
    }
    .no-cards-icon {
      font-size: 48px;
      margin-bottom: 12px;
    }
    .buttons {
      display: flex;
      gap: 12px;
      margin-top: 24px;
    }
    button {
      flex: 1;
      padding: 14px;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }
    .btn-cancel {
      background: white;
      border: 1px solid #d1d5db;
      color: #374151;
    }
    .btn-cancel:hover {
      background: #f9fafb;
    }
    .btn-enroll {
      background: #7c3aed;
      border: none;
      color: white;
    }
    .btn-enroll:hover {
      background: #6d28d9;
    }
    .btn-enroll:disabled {
      background: #9ca3af;
      cursor: not-allowed;
    }
    .warning {
      background: #fffbeb;
      border: 1px solid #fde68a;
      color: #92400e;
      padding: 12px 16px;
      border-radius: 8px;
      font-size: 13px;
      margin-top: 16px;
    }
    .security-badge {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 6px;
      margin-top: 16px;
      font-size: 12px;
      color: #7c3aed;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <% if (clientLogo) { %>
        <img src="<%= clientLogo %>" alt="<%= clientName %>" class="client-logo">
      <% } else { %>
        <div class="client-placeholder">ðŸ“±</div>
      <% } %>
      <h1>Add Cards to Wallet</h1>
      <p class="subtitle">
        <span class="client-name"><%= clientName %></span> wants to enroll your cards
      </p>
      <div class="user-badge">
        <span>ðŸ‘¤</span>
        <span>Signed in as <%= user.email %></span>
      </div>
    </div>

    <div class="wallet-info">
      <div class="wallet-info-title">What this means</div>
      <div class="wallet-info-text">
        By enrolling, you allow <%= clientName %> to:
        <ul class="permissions-list">
          <li>View your selected card details (masked)</li>
          <li>Use cards to make payments on your behalf</li>
          <li>Access remains valid for 90 days</li>
        </ul>
      </div>
    </div>

    <form method="post" action="/interaction/<%= uid %>/confirm" id="wallet-form">
      <input type="hidden" name="walletEnrollment" value="true">

      <% if (creditCards.length > 0) { %>
        <div class="section">
          <div class="section-title">Select Cards to Enroll</div>
          <div class="select-all-row">
            <label class="select-all-label">
              <input type="checkbox" id="select-all" onclick="toggleSelectAll(this)">
              Select All Cards
            </label>
            <span id="selected-count" style="font-size: 13px; color: #6b7280;">0 selected</span>
          </div>
          <div class="cards-list">
            <% creditCards.forEach(function(card, index) { %>
              <label class="card-item" onclick="updateSelection()">
                <input type="checkbox" name="selectedCards" value="<%= card.id %>" onchange="updateSelection()">
                <div class="card-visual <%=
                  card.cardType === 'VISA' || card.cardType === 'VISA_DEBIT' ? 'card-visa' :
                  card.cardType === 'MC' || card.cardType === 'MC_DEBIT' ? 'card-mc' :
                  card.cardType === 'AMEX' ? 'card-amex' : 'card-default'
                %>">
                  <%= card.cardType.replace('_DEBIT', '') %>
                </div>
                <div class="card-info">
                  <div class="card-number">â€¢â€¢â€¢â€¢ â€¢â€¢â€¢â€¢ â€¢â€¢â€¢â€¢ <%= card.cardNumber.slice(-4) %></div>
                  <div class="card-details">
                    <span><%= card.cardHolder %></span>
                    <span>Exp: <%= String(card.expiryMonth).padStart(2, '0') %>/<%= String(card.expiryYear).slice(-2) %></span>
                  </div>
                </div>
              </label>
            <% }); %>
          </div>
        </div>

        <div class="warning">
          <strong>Important:</strong> You can revoke wallet access at any time from your BSIM account settings.
        </div>

        <div class="buttons">
          <button type="button" class="btn-cancel" onclick="document.getElementById('abort-form').submit()">
            Cancel
          </button>
          <button type="submit" class="btn-enroll" id="enroll-btn" disabled>
            Enroll Selected Cards
          </button>
        </div>
      <% } else { %>
        <div class="no-cards">
          <div class="no-cards-icon">ðŸ’³</div>
          <p>No credit cards found</p>
          <p style="margin-top: 8px; font-size: 13px;">Please add a credit card to your BSIM account first.</p>
        </div>
        <div class="buttons">
          <button type="button" class="btn-cancel" onclick="document.getElementById('abort-form').submit()" style="flex: 1;">
            Go Back
          </button>
        </div>
      <% } %>
    </form>

    <form id="abort-form" method="post" action="/interaction/<%= uid %>/abort" style="display: none;"></form>

    <div class="security-badge">
      <span>ðŸ”’</span>
      <span>Secure wallet enrollment by BSIM</span>
    </div>
  </div>

  <script>
    function updateSelection() {
      const checkboxes = document.querySelectorAll('input[name="selectedCards"]');
      const checkedCount = document.querySelectorAll('input[name="selectedCards"]:checked').length;
      const countSpan = document.getElementById('selected-count');
      const enrollBtn = document.getElementById('enroll-btn');
      const selectAll = document.getElementById('select-all');

      // Update count
      countSpan.textContent = checkedCount + ' selected';

      // Enable/disable enroll button
      enrollBtn.disabled = checkedCount === 0;

      // Update select all checkbox
      selectAll.checked = checkedCount === checkboxes.length;
      selectAll.indeterminate = checkedCount > 0 && checkedCount < checkboxes.length;

      // Update visual selection state
      document.querySelectorAll('.card-item').forEach(item => {
        const checkbox = item.querySelector('input[type="checkbox"]');
        if (checkbox.checked) {
          item.classList.add('selected');
        } else {
          item.classList.remove('selected');
        }
      });
    }

    function toggleSelectAll(selectAllCheckbox) {
      const checkboxes = document.querySelectorAll('input[name="selectedCards"]');
      checkboxes.forEach(cb => cb.checked = selectAllCheckbox.checked);
      updateSelection();
    }
  </script>
</body>
</html>
